{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"],
    "paths": {
      "@spartan-ng/ui-button-helm": [
        ".\\src/app/ui/ui-button-helm/src/index.ts"
      ],
      "@spartan-ng/ui-badge-helm": [".\\src/app/ui/ui-badge-helm/src/index.ts"],
      "@spartan-ng/ui-sonner-helm": [
        ".\\src/app/ui/ui-sonner-helm/src/index.ts"
      ],
      "@spartan-ng/ui-icon-helm": [".\\src/app/ui/ui-icon-helm/src/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
